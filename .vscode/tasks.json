{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load CMake Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--load"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Reload CMake Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--reload"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Cleanup CMake Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build XEGE Library",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "xege",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Demos",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "demos",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build All (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--release",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Load And Build XEGE Library",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--target",
                "xege",
                "--debug",
                "--load",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Load And Build Demos",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "demos",
                "--load",
                "--build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Demo - XEGE Test",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "test_main",
                "--build",
                "--run",
                "test_main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Demo - Gomoku",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "game_gomoku",
                "--build",
                "--run",
                "game_gomoku.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Demo - SortVisualization",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "graph_sort_visualization",
                "--build",
                "--run",
                "graph_sort_visualization.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Demo - FunctionVisualization",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "graph_function_visualization",
                "--build",
                "--run",
                "graph_function_visualization.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Demo - Camera Wave",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "tasks.sh",
                "--debug",
                "--target",
                "camera_wave",
                "--build",
                "--run",
                "camera_wave.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "Build Demos"
            ]
        }
    ]
}